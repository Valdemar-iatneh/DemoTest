<Page x:Class="DemoTest.autothor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoTest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="autothor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Authorization" FontSize="36" Grid.Column="0" Grid.Row="1" Margin="100 20 10 5"/>
        <TextBlock Text="Password:" FontSize="30" Grid.Column="0" Grid.Row="2" Margin="120 5 10 5"/>
        <PasswordBox x:Name="text_password" Grid.Column="1" Grid.Row="2" Margin="10 5 100 5" VerticalAlignment="Center" FontSize="15" Padding="5 10"/>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
            <Button Content="Log in" Padding="10" Margin="10" Click="authoriz_click_event"/>
        </StackPanel>
    </Grid>
</Page>
